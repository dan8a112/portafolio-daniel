---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import { contentBlocks, headerItems, socials } from "../content/data/db";
import ContentBlock from "../components/ContentBlock.astro";
import SocialLink from "../components/SocialLink.astro";
import LinkCard from "../components/LinkCard.astro";

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
  <section class="py-10">
    <div class="container mx-auto px-6 flex flex-col md:flex-row items-center">
      <!-- Contenido de texto (izquierda) -->
      <div class="md:w-1/2 space-y-3">
        <div>
          <span class="text-3xl text-primary-white">Hola,</span>
          <span class="text-3xl text-secondary-yellow">soy</span>
          <h2 class="text-4xl font-bold text-secondary-yellow">Daniel Ochoa</h2>
        </div>
        <span class="text-xl text-primary-white"
          >Desarrollador Full Stack | Futuro Ingeniero en Sistemas</span
        >
        <p class="text-primary-white text-lg mt-4 mb-5">
          Desarrollador web con <strong>Enfoque en Frontend</strong>, con
          experiencia en desarrollo web y desarrollo móvil para Android. Mi
          misión es <strong>crear soluciones tecnológicas innovadoras</strong>
          que simplifican y mejoran los procesos de negocios y la experiencia de
          uso de los usuarios finales. Me motiva trabajar en proyectos desafiantes
          que me permitan seguir creciendo como profesional y aportar valor a través
          de la tecnología.
        </p>
        <div class="flex flex-row items-center gap-4">
          {
            socials.map((social) => (
              <SocialLink url={social.url} icon={social.icon} />
            ))
          }
        </div>
      </div>

      <!-- Imagen (derecha) -->
      <div class="md:w-1/2 flex justify-center md:justify-end mt-8 md:mt-0">
        <Image
          src="/images/daniel.jpg"
          alt="Daniel Ochoa"
          width={300}
          height={300}
          class="rounded-full border-4 border-secondary-yellow object-cover"
        />
      </div>
    </div>
  </section>
  {
    contentBlocks.map((content) => (
      <ContentBlock
        title={content.title}
        paragraph={content.paragraph}
        image={content.image}
        imageAlt={content.imageAlt}
        imageRight={content.imageRight}
      />
    ))
  }

  <section class="container mx-auto px-6 pb-6 pt-5">
    <h1 class="text-3xl mb-6 text-primary-white">
      Tambien puedes ver
    </h1>
    <div class="flex flex-col md:flex-row gap-6">
      {
        headerItems
          .slice(1)
          .map((item) => (<LinkCard text={item.text} href={item.href} />))
      }
    </div>
  </section>
</Layout>
