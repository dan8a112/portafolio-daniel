---
import SkillCategory from "../components/SkillCategory.astro";
import Layout from "../layouts/Layout.astro";
import { education, skills } from "../content/data/db";
import AcademicCard from "../components/AcademicCard.astro";
---

<Layout>
  <section class="py-10">
    
    <SkillCategory skills={skills} title="Habilidades" />
    <!-- Título principal -->
    <div class="container mx-auto px-6 flex flex-col gap-8 my-5">
      <h2 class="text-3xl font-bold text-primary-white">Formación Academica</h2>
      {
        education.map((item) => (
          <AcademicCard
            image={item.image}
            title={item.title}
            subtitle={item.subtitle}
            footText={item.footText}
          />
        ))
      }
    </div>
  </section>
</Layout>
