---
import { Image } from "astro:assets";
import type { AcademicCardProps } from "../interfaces/interface";
const {image, title, subtitle, footText, href} = Astro.props as AcademicCardProps;
---

<div class="bg-tertiary-lightblue p-4 rounded-lg shadow-md md:w-[80%] w-[100%]">
    <div class="flex items-center">
        <a href={href}>
            <Image class="mr-4 rounded-md" src={image} alt={"Organizacion de estudio"} width={100} height={100}></Image>
        </a>
        <div class="flex flex-col gap-1">
            <p class="text-lg font-bold text-primary-white">{title}</p>
            <p class="text-md font-semibold text-primary-white">{subtitle}</p>
            <p class="text-secondary-yellow">{footText}</p>
        </div>
    </div>
</div>